<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="1">


    <!-- OPTIONS -->
    <!-- Insurance -->
    <record id="chronopost_insurance" model="delivery.carrier.template.option">
      <field name="name">Get insurance</field>
      <field name="code">INS</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">insurance</field>
    </record>

    <!-- Delivery day -->
    <record id="chronopost_service_monday" model="delivery.carrier.template.option">
      <field name="name">Delivery on Monday</field>
      <field name="code">1</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">service</field>
      <field name="description">Normal delivery if you do not choose this option</field>
    </record>

    <record id="chronopost_service_saturday" model="delivery.carrier.template.option">
      <field name="name">Delivery on Saturday</field>
      <field name="code">6</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">service</field>
      <field name="description">Normal delivery if you do not choose this option</field>
    </record>

    <!-- Shipper Pre Alert -->
    <record id="chronopost_shipper_alert" model="delivery.carrier.template.option">
      <field name="name">Shipper Pre-alert</field>
      <field name="code">11</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">shipper_alert</field>
      <field name="description">Subscription Tracking Shipper (no shipper pre-alert if you do not choose this option)</field>
    </record>

    <!-- Recipient Pre Alert -->
    <record id="chronopost_recipient_alert" model="delivery.carrier.template.option">
      <field name="name">Recipient Pre-alert</field>
      <field name="code">22</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">recipient_alert</field>
      <field name="description">Recipient mail pre-alert (no recipient pre-alert if you do not choose this option)</field>
    </record>

    <!-- Type of merchandise -->
    <record id="chronopost_object_type" model="delivery.carrier.template.option">
      <field name="name">Documents</field>
      <field name="code">DOC</field>
      <field name="partner_id" ref="chronopost"></field>
      <field name="chronopost_type">object_type</field>
      <field name="description">Will be Merchandise if you do not choose this option</field>
    </record>


  </data>
</openerp>
